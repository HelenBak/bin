[user]
[color]
    ui = true
[merge]
    tool = vimdiff
[difftool]
    tool = vimdiff
    prompt = false
[diff]
    tool = vimdiff
    submodule = log
[push]
    default = simple
[status]
    showUntrackedFiles = no
[color]
    ui = auto
[alias]
    lg1 = log --pretty=format:'%h - %an, %ar : %s'
    lg2 = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)'
    lg3 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''%C(white)%s%C(reset) %C(dim white)- %an%C(reset)'
    lg4 = log --graph --date-order -C -M --pretty=format:\"<%h> %ad [%an] %Cgreen%d%Creset %s\" --date=short
    lgs = log --date-order -C -M --pretty=format:\"<%h> %ad [%an] %d %n    %s%n\" --date=short
    sm = submodule
    br = branch
    bl = branch -l
    bclr = remote update --prune
    co = checkout
    cf = checkout --.
    ci = commit
    ad = add
    df = diff
    dfs = diff --staged
    dfh = diff HEAD
    dff = diff FETCH_HEAD
    st = status
    stu = status -u
    sh = stash
    shs = stash save
    sha = stash apply
    shl = stash list
    shd = stash drop
    plod = pull origin develop
    master = checkout master
    dev = checkout develop
    ips = checkout feature_ips
    ipsec = checkout feature_ipsec
    ike = checkout feature_ike
    ft = "!sh -c 'git checkout feature_$1' -"
    re = "!sh -c 'git checkout release_$1' -"
    hot = "!sh -c 'git checkout hotfix_$1' -"
    site = "!sh -c 'git checkout site_$1' -"
[core]
	editor = /usr/local/bin/vim
